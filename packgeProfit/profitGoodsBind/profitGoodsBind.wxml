<!-- packgeProfit/profitGoodsBind/profitGoodsBind.wxml -->
<view class="container">
		<!--  -->
		<view class="goods-info v-flex v-flex-nowrap v-row-between">
				<!-- 主图 -->
				<view class="v-flex-1">
						<van-image src="" alt="商品主图" width="200rpx" height="200rpx" radius="10"></van-image>
				</view>
				<!-- 信息 -->
				<view class="v-flex-1 single-line-hidden">
						<view class="v-font-xl v-font-bold v-main-color">方萝卜五子棋机器人</view>
						<view class="v-m-t-10 v-font-md v-type-info">FW-SSB071</view>
						<text class="v-m-t-10 v-p-l-10 v-p-r-10 v-font-md bg-primary v-type-primary-dark">主人：会说话的狐狸
						</text>
						<!-- <text wx:else class="v-m-t-10 v-p-l-10 v-p-r-10 v-font-md  bg-primary v-type-primary-dark v-p">
								未认主
						</text> -->
				</view>
		</view>
		<!--  -->
		<van-cell-group title="主人信息" inset>
				<van-field value="{{ name }}" required label="姓名" placeholder="请输入" />
				<van-field value="{{ phone }}" required label="手机号" placeholder="请输入" />
				<van-field value="{{ authCode }}" required label="验证码" placeholder="请输入" />
				<van-field value="{{ idCard }}" required label="身份证号码" placeholder="请输入" />
				<van-field value="{{ addr }}" label="收件地址" placeholder="请输入" />
		</van-cell-group>
		<!--  -->
		<view class="v-p-l-30 v-p-r-30 v-m-t-30">
				<van-checkbox value="{{ checked }}" shape="square" bind:change="onChange">
						我已仔细阅读并同意
						<navigator class="v-inblock v-type-primary" target="" url="" hover-class="navigator-hover" open-type="navigate">
								《认主说明协议》
						</navigator>
				</van-checkbox>

		</view>
</view>
<yulin-submit-bar multiple safeArea="{{ _mix_isIphoneX }}">
		<view slot="left" style="width: 100%">
				<van-button block square custom-class="" custom-style="border-bottom-left-radius: 999rpx; border-top-left-radius: 999rpx;" color="{{ _mix_themeColor }}" bindtap="buyAgain">
						提交
				</van-button>
		</view>
		<!-- 如果扫码结果支持申请售后的功能，那么在实际应用场景中商品必须和物联码绑定 -->
		<view slot="right" style="width: 100%">
				<van-button block square custom-class="" custom-style="border-bottom-right-radius: 999rpx; border-top-right-radius: 999rpx;" color="#a0cfff" bindtap="">
						稍后再说
				</van-button>
		</view>
</yulin-submit-bar>