<!-- packgeUser/selectAddress/selectAddress.wxml -->
<view class="container v-m-t-15 v-p-l-10 v-p-r-10" hover-class="none">
	<!-- 地址卡片 -->
	<van-radio wx:for="{{ addrList }}" wx:key="id" name="1">
		<view class="address-wrapper v-p-30 v-m-b-15 address-wrapper-active {{  }}" hover-class="none" hover-stop-propagation="{{false}}">
			<view class="v-flex v-flex-nowrap v-row-between" hover-class="none" hover-stop-propagation="{{false}}">
				<view
				 class="v-main-color"
				 selectable="{{false}}"
				 space="{{false}}"
				 decode="{{false}}"
				>
					<van-icon size="1em" name="location-o" />
					收货人：{{"张三"}} {{"137*****4768"}}
				</view>
				<view
				 class="v-font-md v-type-primary"
				 hover-class="none"
				 data-addrId="{{}}"
				 bind:tap="editAddr"
				>
					编辑
				</view>
			</view>
			<view class="v-m-t-10 single-line-hidden" hover-class="none" hover-stop-propagation="{{false}}">
				江苏省 无锡市新吴区XXX路129号
			</view>
		</view>
	</van-radio>

	<yulin-submit-bar-1btns submit-text="选择地址" bind:submit="addrConfirm" />
</view>

